<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="contenedorPBP" xmlns:fx="http://javafx.com/fxml">
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <children>
                <Label text="Marca:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="marcaText" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Modelo:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="modeloText" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Precio (€):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="precioText" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Descripción:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="descripcionText" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <Button fx:id="publicarButton" text="Publicar" />
                <Button fx:id="cancelarButton" text="Cancelar" />
            </children>
        </HBox>
    </bottom>
    <top>
        <Label fx:id="notificacionLabel" text="" alignment="CENTER" wrapText="true" />
    </top>
</BorderPane>
