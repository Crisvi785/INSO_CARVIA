<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="resultPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.carvia.controllers.ResultsController" style="-fx-padding: 20px;">
    <top>
        <Label text="Catálogo de Vehículos" style="-fx-font-size: 24px; -fx-padding: 10px;" />
    </top>
    <center>
        <TableView fx:id="tablaVehiculos" prefWidth="800" prefHeight="400">
            <columns>
                <TableColumn fx:id="columnaMarca" text="Marca" prefWidth="150" />
                <TableColumn fx:id="columnaModelo" text="Modelo" prefWidth="150" />
                <TableColumn fx:id="columnaAño" text="Año" prefWidth="100" />
                <TableColumn fx:id="columnaPrecio" text="Precio" prefWidth="100" />
                <TableColumn fx:id="columnaComprar" text="Comprar" prefWidth="100" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <Button text="Actualizar"  />
            <Button text="Cerrar"  />
        </HBox>
    </bottom>
</BorderPane>
